<%- include('../partials/header2') %>

<section id="show-page">
    <div id="drink-title"><%= drink.title %></div>


    <div id="ingredient-title" class='showhead'>Ingredients</div>
    <ul>
    <% drink.ingredients.forEach(function(i) { %>
    <div class="showlist"><li><%= i %></li></div>
    <% }) %>        
</ul>

    <div id="directions-title" class='showhead'>Directions</div>
    <ol>
        <% drink.directions.forEach(function(d) { %>
    <div class="showlist"><li><%= d %></li></div>
    <% }) %>
    </ol>
</section>

<section>
    <h1 class="showhead">Add Review</h1>
    <form id="add-review" method="POST" action="/drink/<%= drink._id %>">
    <label>Review:</label>
    <textarea name="content" class="type-here"></textarea>
    <label>Rating:</label>
    <select name="rating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>
    <input type="submit" value="Add Review" id="review">
    </form>
</section>

<section>
    <h2 class="showhead">Reviews</h2>
</section>

<% if (drink.reviews.length) { %>
    <table>
        <% drink.reviews.forEach(function(r){ %>
        <tr>
            <td><%= r.content %></td>
            <td><%= r.rating %></td>
        </tr>
        <% }); %>
    </table>

    <% } else { %>
        <h3>No reviews yet</h3>
        <% } %>


<%- include('../partials/footer') %>